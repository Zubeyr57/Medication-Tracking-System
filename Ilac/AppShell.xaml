<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ilac.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Ilac"
    Shell.FlyoutBehavior="Flyout"
    Title="Ilac">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Kullanım Takvimi"
        ContentTemplate="{DataTemplate local:MedCalendarPage}"
        Route="MedCalendarPage" />
    <ShellContent
        Title="Geçmiş Kullanımlar"
        ContentTemplate="{DataTemplate local:UsedMedPage}"
        Route="UsedMedPage" />
    

</Shell>
